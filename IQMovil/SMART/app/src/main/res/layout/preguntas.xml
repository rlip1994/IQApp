<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/rainbow">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="53dp"
            android:layout_toStartOf="@+id/siguiente"
            android:text="@string/pregunta_titulo"
            android:textSize="36sp" />


        <ImageButton
            android:id="@+id/siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/titulo"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/titulo"
            android:layout_marginEnd="17dp"
            android:background="@color/transparente"
            app:srcCompat="@android:drawable/ic_menu_send" />

    </RelativeLayout>

    <TextView
       android:id="@+id/pregunta"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="30dp"
       android:layout_marginTop="25dp"
       android:layout_marginLeft="11dp"
       android:text="@string/enunciado_pregunta"
       android:textSize="25sp" />


   <RadioButton
       android:id="@+id/opcion1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="11dp"
       android:text="@string/opcion_respuesta_texto"
       android:textSize="18dp" />

   <RadioButton
       android:id="@+id/opcion2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="11dp"
       android:text="@string/opcion_respuesta_texto"
       android:textSize="18dp" />

   <RadioButton
       android:id="@+id/opcion3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="11dp"
       android:text="@string/opcion_respuesta_texto"
       android:textSize="18dp" />

   <RadioButton
       android:id="@+id/opcion4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="11dp"
       android:text="@string/opcion_respuesta_texto"
       android:textSize="18dp" />

   <cn.iwgang.countdownview.CountdownView
       android:id="@+id/tiempo"
       android:layout_width="wrap_content"
       android:layout_height="62dp"
       android:layout_gravity="center"
       android:layout_marginTop="100dp"
       app:isHideTimeBackground="false"
       app:isShowDay="false"
       app:isShowHour="false"
       app:isShowMillisecond="false"
       app:isShowMinute="false"
       app:isShowSecond="true"
       app:timeBgColor="@color/vainilla"
       app:timeBgDivisionLineSize="0dp"
       app:timeBgRadius="50dp"
       app:timeBgSize="100dp"
       app:timeTextColor="@color/gris"
       app:timeTextSize="40dp" />

</LinearLayout>